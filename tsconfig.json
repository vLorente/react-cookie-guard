{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node10",
    "declaration": true,
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
